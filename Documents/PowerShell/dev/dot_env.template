# Leave empty to pass through host environment variables

# Docker image to use for the dev container
DOCKER_DEV_ENV=ghcr.io/steveblum/sdev
DOCKER_DEV_TAG=latest

# Workspace mount (bind). Set to the host directory you want mounted at /root/workspace
WORKSPACE_DIR=./workspace

# Optional host paths (adjust to your host layout)
SSH_DIRECTORY=~/.ssh
NPM_FILE=~/.npmrc
GPG_DIRECTORY=~/.gnupg
SHARED_DIRECTORY=~/shared
KUBE_DIRECTORY=~/.kube
OBSIDIAN_VAULT_DIRECTORY=~/vault

# Identity / git defaults
GIT_EMAIL=
GIT_USER=
GIT_SIGNINGKEY=

# LLM keys
GEMINI_API_KEY=
CLAUDE_API_KEY=
GOOGLE_CLOUD_PROJECT_ID=
